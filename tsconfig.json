{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "noImplicitReturns": true,
    "baseUrl": "./src",
    "module": "esnext",
    "lib": [
      "es2017",
      "dom"
    ],
    "target": "es6",
    "jsx": "react"
  },
  "include": [
    "./src/**/*"
  ]
}